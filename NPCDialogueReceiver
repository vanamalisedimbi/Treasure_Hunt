-- SIMPLE NPC TALK SCRIPT
local ChatService = game:GetService("Chat")

local NPC = script.Parent
local Head = NPC:WaitForChild("Head")
local ProximityPrompt = Head:FindFirstChild("ProximityPrompt") or Head:WaitForChild("ProximityPrompt", 5)

if not ProximityPrompt then
	warn("âš  ProximityPrompt not found in NPC Head!")
	return
end

-- STUDENT CAN TYPE WHAT THE NPC SHOULD SAY HERE
local dialogueText = "Hello traveler! Welcome to our village."

-- Function to make NPC speak
local function talk()
	ChatService:Chat(Head, dialogueText, Enum.ChatColor.Blue)
end

-- Connect the prompt activation to the talk function
ProximityPrompt.Triggered:Connect(talk)
